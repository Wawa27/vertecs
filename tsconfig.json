{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom",
      "ES2015"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/cannon/",
      "./src/oimojs/",
      "./types"
    ],
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
