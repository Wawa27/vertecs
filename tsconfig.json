{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "ES2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "examples/**/*.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
