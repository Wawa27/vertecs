{
  "name": "vertecs",
  "version": "2.0.1",
  "description": "A typescript entity-component-system framework",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:example-network-server": "ts-node --esm --experimental-specifier-resolution=node examples/network/server/Main",
    "start:example-network-client": "ts-node --esm --experimental-specifier-resolution=node examples/network/client/Main",
    "test": "mocha --experimental-specifier-resolution=node --loader=ts-node/esm test/**/*.spec.ts --exit --recursive",
    "lint": "eslint --ext .ts src test examples --fix",
    "build:examples": "rollup -c rollup.config.ts --configPlugin typescript",
    "dev:examples": "rollup -c rollup.config.ts --configPlugin typescript --watch",
    "prepare": "husky install"
  },
  "keywords": [
    "ecs",
    "typescript",
    "entity-component-system",
    "framework",
    "game",
    "game-engine",
    "game-loop"
  ],
  "dependencies": {
    "chai-spies": "^1.0.0",
    "gl-matrix": "^3.4.3",
    "oimo-esm": "^1.0.10",
    "performance-now": "^2.1.0",
    "three": "^0.155",
    "uuid": "^8.3.2",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.0",
    "@types/chai": "^4.3.1",
    "@types/chai-spies": "^1.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.16.3",
    "@types/three": "^0.155.0",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "mocha": "10.0.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "rollup": "^3.5.0",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "cannon-es": "^0.20.0",
    "gl-matrix": "^4.0.0-beta.1",
    "performance-now": "^2.1.0",
    "three": "^0.155",
    "uuid": "^8.3.2",
    "ws": "^8.9.0"
  }
}